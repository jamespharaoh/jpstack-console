<?xml version="1.0"?>

<!DOCTYPE import-control PUBLIC
	"-//Puppy Crawl//DTD Import Control 1.1//EN"
	"http://www.puppycrawl.com/dtds/import_control_1_1.dtd">

<import-control pkg="wbs">

	<allow pkg="fj"/>
	<allow pkg="java"/>
	<allow pkg="javax"/>
	<allow pkg="junit"/>
	<allow pkg="lombok"/>

	<allow pkg="com.google.common"/>
	<allow pkg="com.sun.mail"/>
	<allow pkg="nu.xom"/>
	<allow pkg="org.apache.commons"/>
	<allow pkg="org.apache.http"/>
	<allow pkg="org.apache.log4j"/>
	<allow pkg="org.apache.tools.ant"/>
	<allow pkg="org.dom4j"/>
	<allow pkg="org.jadira.usertype"/>
	<allow pkg="org.jdom2"/>
	<allow pkg="org.json.simple"/>
	<allow pkg="org.joda.time"/>
	<allow pkg="org.junit"/>
	<allow pkg="org.hibernate"/>
	<allow pkg="org.postgresql"/>
	<allow pkg="org.xml.sax"/>

	<!-- framework -->

	<subpackage name="framework">
		<allow pkg="wbs.framework"/>
		<!-- TODO -->
		<subpackage name="application.tools">
			<allow pkg="wbs.api.module"/>
			<allow pkg="wbs.console.helper"/>
			<allow pkg="wbs.console.module"/>
		</subpackage>
	</subpackage>

	<subpackage name="api">
		<allow pkg="wbs.api"/>
		<allow pkg="wbs.framework"/>
	</subpackage>

	<subpackage name="console">
		<allow pkg="wbs.console"/>
		<allow pkg="wbs.framework"/>
	</subpackage>

	<!-- platform -->

	<subpackage name="platform">
		<allow pkg="wbs.api"/>
		<allow pkg="wbs.console"/>
		<allow pkg="wbs.framework"/>
		<allow pkg="wbs.platform"/>
	</subpackage>

	<subpackage name="services">
		<allow pkg="wbs.api"/>
		<allow pkg="wbs.console"/>
		<allow pkg="wbs.framework"/>
		<allow pkg="wbs.platform"/>
		<allow pkg="wbs.services"/>
	</subpackage>

	<subpackage name="sms.">
		<allow pkg="wbs.api"/>
		<allow pkg="wbs.console"/>
		<allow pkg="wbs.framework"/>
		<allow pkg="wbs.platform"/>
		<allow pkg="wbs.sms"/>
	</subpackage>

	<!-- extras -->

	<subpackage name="applications">
		<allow pkg="wbs.applications"/>
		<allow pkg="wbs.console"/>
		<allow pkg="wbs.framework"/>
		<allow pkg="wbs.integrations"/>
		<allow pkg="wbs.platform"/>
		<allow pkg="wbs.services"/>
		<allow pkg="wbs.sms"/>
	</subpackage>

	<subpackage name="clients">
		<allow pkg="wbs.api"/>
		<allow pkg="wbs.clients"/>
		<allow pkg="wbs.console"/>
		<allow pkg="wbs.framework"/>
		<allow pkg="wbs.integrations"/>
		<allow pkg="wbs.platform"/>
		<allow pkg="wbs.sms"/>
	</subpackage>

	<subpackage name="integrations">
		<allow pkg="wbs.api"/>
		<allow pkg="wbs.console"/>
		<allow pkg="wbs.framework"/>
		<allow pkg="wbs.integrations"/>
		<allow pkg="wbs.platform"/>
		<allow pkg="wbs.sms"/>
		<subpackage name="paypal">
			<allow pkg="urn.ebay"/>
		</subpackage>
	</subpackage>

	<subpackage name="smsapps">
		<allow pkg="wbs.api"/>
		<allow pkg="wbs.console"/>
		<allow pkg="wbs.framework"/>
		<allow pkg="wbs.platform"/>
		<allow pkg="wbs.sms"/>
		<allow pkg="wbs.smsapps"/>
	</subpackage>

	<!-- test -->

	<subpackage name="test">
		<allow pkg="wbs.api"/>
		<allow pkg="wbs.clients"/>
		<allow pkg="wbs.console"/>
		<allow pkg="wbs.framework"/>
		<allow pkg="wbs.platform"/>
		<allow pkg="wbs.sms"/>
		<allow pkg="wbs.smsapps"/>
		<allow pkg="wbs.test"/>
	</subpackage>

</import-control>
