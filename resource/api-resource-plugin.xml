<plugin
	name="api-resource"
	package="wbs.api.resource">

	<layer name="api">

		<bootstrap-component class="ApiGetActionSpec"/>
		<bootstrap-component class="ApiPostActionSpec"/>
		<bootstrap-component class="ApiResourceSpec"/>
		<bootstrap-component class="ApiVariableSpec"/>

		<component class="ApiGetActionBuilder"/>
		<component class="ApiPostActionBuilder"/>
		<component class="ApiResource"/>
		<component class="ApiResourceBuilder"/>
		<component class="ApiVariable"/>
		<component class="ApiVariableBuilder"/>

	</layer>

</plugin>
